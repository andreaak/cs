<Window x:Class="TextConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Text Converter" Height="518" Width="525" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="130"></ColumnDefinition>
            <ColumnDefinition Width="163"></ColumnDefinition>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>


        <Button Grid.Row="0" Grid.Column="0" Content="Open..." HorizontalAlignment="Left" 
                Margin="5,5,0,0" VerticalAlignment="Top" Width="75" Name="buttonOpen" Tag="buttonOpen" 
                ToolTip="Open" Click="ButtonOpen_Click" Height="20"/>
        <TextBox Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" Height="22" 
                 Margin="5,5,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="370" Name="textBoxDirectory" 
                 Text="{Binding Text, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}" Grid.ColumnSpan="2"/>
        <Button Grid.Row="1" Grid.Column="0" Content="Convert" Command="Save" HorizontalAlignment="Left" 
                Margin="5,5,0,0" VerticalAlignment="Top" Width="75" Name="buttonConvert" Height="20">
            <Button.CommandBindings>
                <CommandBinding Command="Save"
                        Executed="Convert_Executed" CanExecute="Convert_CanExecute"/>
            </Button.CommandBindings>
        </Button>

        <ComboBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Left" 
                    Margin="5,5,0,0" VerticalAlignment="Top" Width="220" Name="comboSrcEncoding"
                    ItemsSource="{Binding ViewModelConverter.Encodings}" 
                    DisplayMemberPath="DisplayName" 
                    SelectedValuePath="Name" 
                    SelectedValue="{Binding ViewModelConverter.SrcEncodingName}" Height="22" />
        <ComboBox Grid.Row="2" Grid.Column="2" HorizontalAlignment="Left" 
                    Margin="5,5,-1,0" VerticalAlignment="Top" Width="220" Name="comboDstEncoding"
                    ItemsSource="{Binding ViewModelConverter.Encodings}" 
                    DisplayMemberPath="DisplayName" 
                    SelectedValuePath="Name" 
                    SelectedValue="{Binding ViewModelConverter.DstEncodingName}" Height="22" />

        <!--Word for cards CSV -> XML -->
        <Button Grid.Row="3" Grid.Column="0" Content="Open CSV" HorizontalAlignment="Left" 
                Margin="5,5,0,0" VerticalAlignment="Top" 
                Width="115" x:Name="buttonWordOpenCsv" Tag="buttonWordOpenCsv" ToolTip="Open Words in CSV file" 
                Click="buttonOpenWordCsv_Click" Height="20"/>
        <TextBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="22" 
                 Margin="5,5,0,0" TextWrapping="Wrap" 
                 VerticalAlignment="Top" Width="370" x:Name="textBoxFileWordCSV" 
            Text="{Binding Text, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"/>
        <Button Grid.Row="4" Grid.Column="0" Content="Convert CSV -> XML" Command="Save" HorizontalAlignment="Left" 
                Margin="5,5,0,0" VerticalAlignment="Top" Width="120" x:Name="buttonConvertToXml" Height="20">
            <Button.CommandBindings>
                <CommandBinding Command="Save"
                    Executed="ConvertFromCSVToXml_Executed" CanExecute="ConvertFromCSVToXml_CanExecute"/>
            </Button.CommandBindings>
        </Button>
        <Button Grid.Row="4" Grid.Column="1" Content="Download En Transcriptions" Command="Save" HorizontalAlignment="Left" 
                Margin="5,5,0,0" 
                VerticalAlignment="Top" Width="148" x:Name="buttonDownloadWordTranscriptions" Height="20">
            <Button.CommandBindings>
                <CommandBinding Command="Save"
                    Executed="ConvertFromCSVToXmlAndDownloadUkWordTranscription_Executed" CanExecute="ConvertFromCSVToXml_CanExecute"/>
            </Button.CommandBindings>
        </Button>
        <Button Grid.Row="4" Grid.Column="2" Content="Download Us Transcriptions" Command="Save" HorizontalAlignment="Left" 
                Margin="5,5,0,0" 
                VerticalAlignment="Top" Width="152" x:Name="buttonDownloadWordUsTranscriptions" Height="20">
            <Button.CommandBindings>
                <CommandBinding Command="Save"
                    Executed="ConvertFromCSVToXmlAndDownloadUsWordTranscription_Executed" CanExecute="ConvertFromCSVToXml_CanExecute"/>
            </Button.CommandBindings>
        </Button>

        <!--Word for cards XML -> CSV -->
        <Button Grid.Row="5" Grid.Column="0" Content="Open XML" HorizontalAlignment="Left" 
                Margin="5,5,0,0" VerticalAlignment="Top" 
                Width="115" x:Name="buttonWordOpenXml" Tag="buttonWordOpenXml" ToolTip="Open Words in XML file" 
                Click="buttonOpenWordXml_Click" Height="20"/>
        <TextBox Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="22" 
                 Margin="5,5,0,0" TextWrapping="Wrap" 
                 VerticalAlignment="Top" Width="370" x:Name="textBoxFileWordXml" 
            Text="{Binding Text, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"/>
        <Button Grid.Row="6" Grid.Column="0" Content="Convert XML -> CSV" Command="Save" HorizontalAlignment="Left" 
                Margin="5,5,0,0" VerticalAlignment="Top" Width="120" x:Name="buttonConvertToCsv" Height="20">
            <Button.CommandBindings>
                <CommandBinding Command="Save"
                    Executed="ConvertWordToCSV_Executed" CanExecute="ConvertWordToCSV_CanExecute"/>
            </Button.CommandBindings>
        </Button>
        <Button Grid.Row="6" Grid.Column="1" Content="Download En Transcriptions" Command="Save" HorizontalAlignment="Left" 
                Margin="5,5,0,0" 
                VerticalAlignment="Top" Width="148" x:Name="buttonDownloadWordCSVTranscriptions" Height="20">
            <Button.CommandBindings>
                <CommandBinding Command="Save"
                    Executed="ConvertWordToCSVAndDownloadUkWordTranscription_Executed" CanExecute="ConvertWordToCSV_CanExecute"/>
            </Button.CommandBindings>
        </Button>
        <Button Grid.Row="6" Grid.Column="2" Content="Download Us Transcriptions" Command="Save" HorizontalAlignment="Left" 
                Margin="5,5,0,0" 
                VerticalAlignment="Top" Width="152" x:Name="buttonDownloadWordUsCSVTranscriptions" Height="20">
            <Button.CommandBindings>
                <CommandBinding Command="Save"
                    Executed="ConvertWordToCSVAndDownloadUsWordTranscription_Executed" CanExecute="ConvertWordToCSV_CanExecute"/>
            </Button.CommandBindings>
        </Button>

        <!--Irregular verbs for cards-->
        <Button Grid.Row="7" Grid.Column="0" Content="Open Verb CSV" HorizontalAlignment="Left" 
                Margin="5,5,0,0" VerticalAlignment="Top" 
                Width="120" x:Name="buttonOpenVerbCsv" Tag="buttonOpenVerbCsv" ToolTip="Open CSV" 
                Click="buttonOpenVerbCsv_Click" Height="20"/>
        <TextBox Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="22" 
                 Margin="5,5,0,0" TextWrapping="Wrap" 
                 VerticalAlignment="Top" Width="370" x:Name="textBoxFileVerbCSV" 
            Text="{Binding VerbText, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"/>
        <Button Grid.Row="8" Grid.Column="0" Content="Convert Verb To XML" Command="Save" HorizontalAlignment="Left" 
                Margin="5,5,0,0" 
                VerticalAlignment="Top" Width="120" x:Name="buttonConvertVerbToXml" Height="20">
            <Button.CommandBindings>
                <CommandBinding Command="Save"
                    Executed="ConvertVerbToXML_Executed" CanExecute="ConvertVerbToXML_CanExecute"/>
            </Button.CommandBindings>
        </Button>
        <Button Grid.Row="8" Grid.Column="1" Content="Download En Transcriptions" Command="Save" HorizontalAlignment="Left" 
                Margin="5,5,0,0"  
                VerticalAlignment="Top" Width="148" x:Name="buttonDownloadVerbTranscriptions" Height="20">
            <Button.CommandBindings>
                <CommandBinding Command="Save"
                    Executed="ConvertVerbToXMLAndDownloadUkVerbTranscription_Executed" CanExecute="ConvertVerbToXML_CanExecute"/>
            </Button.CommandBindings>
        </Button>
        <Button Grid.Row="8" Grid.Column="2" Content="Download Us Transcriptions" Command="Save" HorizontalAlignment="Left" 
                Margin="5,5,0,0"  
                VerticalAlignment="Top" Width="152" x:Name="buttonDownloadUsVerbTranscriptions" Height="20">
            <Button.CommandBindings>
                <CommandBinding Command="Save"
                    Executed="ConvertVerbToXMLAndDownloadUsVerbTranscription_Executed" CanExecute="ConvertVerbToXML_CanExecute"/>
            </Button.CommandBindings>
        </Button>

        <!--Sounds for cards-->
        <Button Grid.Row="9" Grid.Column="0" Content="Open Sounds List" HorizontalAlignment="Left" 
                Margin="5,5,0,0" VerticalAlignment="Top" 
                Width="120" x:Name="buttonOpenSoundsFile" Tag="buttonOpenSoundsFile" ToolTip="Open CSV" 
                Click="buttonOpenSoundsFile_Click" Height="20"/>
        <TextBox Grid.Row="9" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="22" 
                 Margin="5,5,0,0" TextWrapping="Wrap" 
                 VerticalAlignment="Top" Width="370" x:Name="textBoxFileSounds" 
            Text="{Binding SoundsText, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"/>
        <Button Grid.Row="10" Grid.Column="0" Content="Download Sounds" Command="Save" HorizontalAlignment="Left" 
                Margin="5,5,0,0" 
                VerticalAlignment="Top" Width="120" x:Name="buttonDownloadSounds" Height="20">
            <Button.CommandBindings>
                <CommandBinding Command="Save"
                    Executed="DownloadSounds_Executed" CanExecute="DownloadSounds_CanExecute"/>
            </Button.CommandBindings>
        </Button>
        <Button Grid.Row="10" Grid.Column="1" Content="Download Word Sounds" Command="Save" HorizontalAlignment="Left" 
                Margin="5,5,0,0" 
                VerticalAlignment="Top" Width="135" x:Name="buttonDownloadWordSounds" Height="20">
            <Button.CommandBindings>
                <CommandBinding Command="Save"
                    Executed="DownloadWordSounds_Executed" CanExecute="DownloadSounds_CanExecute"/>
            </Button.CommandBindings>
        </Button>
        <Button Grid.Row="10" Grid.Column="2" Content="Download Verb Sounds" Command="Save" HorizontalAlignment="Left" 
                Margin="5,5,0,0" 
                VerticalAlignment="Top" Width="135" x:Name="buttonDownloadVerbSounds" Height="20">
            <Button.CommandBindings>
                <CommandBinding Command="Save"
                    Executed="DownloadVerbSounds_Executed" CanExecute="DownloadSounds_CanExecute"/>
            </Button.CommandBindings>
        </Button>

        <Button Grid.Row="11" Grid.Column="0" Content="Combine Ru En " Command="Save" HorizontalAlignment="Left" 
                Margin="5,5,0,0" 
                VerticalAlignment="Top" Width="120" x:Name="buttonDownloadTranscriptions" 
                ToolTip="Combine Ru En and download transcription" Height="20">
            <Button.CommandBindings>
                <CommandBinding Command="Save"
                    Executed="DownloadPlainListTranscription_Executed" CanExecute="DownloadSounds_CanExecute"/>
            </Button.CommandBindings>
        </Button>

        <Button Grid.Row="11" Grid.Column="1" Content="Parse Words Popularity" Command="Save" HorizontalAlignment="Left" 
                Margin="5,5,0,0" 
                VerticalAlignment="Top" Width="135" x:Name="buttonParseWordsWithPopularity" 
                ToolTip="Combine Ru En and download transcription" Height="20">
            <Button.CommandBindings>
                <CommandBinding Command="Save"
                    Executed="DownloadPopularityList_Executed" CanExecute="DownloadSounds_CanExecute"/>
            </Button.CommandBindings>
        </Button>

        <Label Grid.Row="12" Grid.Column="0" x:Name="labelInfo" Content="" HorizontalAlignment="Left" 
               Margin="5,5,0,0" Height="22" VerticalAlignment="Top" FontSize="10" Width="115"/>
        <Label Grid.Row="12" Grid.Column="1" x:Name="labelError" Content="" HorizontalAlignment="Left" 
               Margin="5,5,0,0" Height="22" VerticalAlignment="Top" FontSize="10" Width="370" Grid.ColumnSpan="2"/>


    </Grid>
</Window>
