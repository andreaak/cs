@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GenerateUrl</title>
</head>
<body>
    <div>
        <p>
            <strong>@@Url.Action("A_02_ActionWithParameters", "_02_Link", new { id = "customer-name" })</strong> =
            @Url.Action("A_02_ActionWithParameters", "_02_Link", new { id = "customer-name" })
        </p>
        <p>
            <strong>@@Url.Action("A_01_BaseInfo", "_02_Link")</strong> =
            @Url.Action("A_01_BaseInfo", "_02_Link")
        </p>
        <p>
            <strong>@@Url.RouteUrl(new {action = "A_01_BaseInfo", controller = "_02_Link"})</strong> =
            @Url.RouteUrl(new { action = "A_01_BaseInfo", controller = "_02_Link" })
        </p>
        <p>
            <strong>
                &lt;a href="@@Url.Action("A_01_BaseInfo", "_02_Link")"&gt;@@Url.Action&lt;/a&gt;
            </strong> <br />
            <a href="@Url.Action("A_01_BaseInfo", "_02_Link")">@@Url.Action</a>
        </p>
        <p>
            <strong>
                &lt;a href="@@Url.RouteUrl(new { action = "A_01_BaseInfo", controller = "_02_Link", area = "_04_Routing" })"&gt;@@Url.RouteUrl&lt;/a&gt;
            </strong><br />
            <a href="@Url.RouteUrl(new {action = "A_01_BaseInfo", controller = "_02_Link", area = "_04_Routing"})">@@Url.RouteUrl</a>
        </p>
    </div>
</body>
</html>
